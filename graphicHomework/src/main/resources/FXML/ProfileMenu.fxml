<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.ProfileMenu"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../css/styles.css" styleClass="pane-parent">

    <center>
        <VBox alignment="CENTER" spacing="15">
            <Text fx:id="output_text" styleClass="inputField"/>
            <HBox alignment="CENTER" spacing="5">
                <TextField  styleClass="inputField" fx:id="username"/>
                <Button text="Change username" fx:id="login_button" onMouseClicked="#usernameChange"/>
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <PasswordField  styleClass="inputField" fx:id="password"/>
                <Button text="Change username" fx:id="login_button" onMouseClicked="#passwordChange"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>